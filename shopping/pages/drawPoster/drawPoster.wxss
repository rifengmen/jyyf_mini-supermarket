/* 画布样式 start */
.canvas_cont {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
}
#posterCanvas {
  width: 600rpx;
  height: 960rpx;
}
.canvas_cont .btn {
  width: auto;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 30rpx;
  padding: 0 80rpx;
}
.canvas_cont .closed {
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
}
/* 画布样式 end */
