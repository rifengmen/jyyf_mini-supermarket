/* shopping/pages/editorOrder/editorOrder.wxss */
/* 选择地址 start */
.address_cont {
  width: calc(100% - 48rpx);
  height: auto;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address_cont .address {
  width: calc(100% - 120rpx);
  height: auto;
  margin-right: 30rpx;
  padding: 26rpx 0;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-flow: column;
}
.address_cont .address .name {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 8rpx;
}
.address_cont .more {
  width: 90rpx;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
/* 选择地址 end */
/* 分隔符 start */
.decollator {
  width: 100%;
  height: 8rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.decollator image {
  width: 100%;
  height: 100%;
}
/* 分割符 end */
/* 门店名称 start */
.deptname_cont {
  width: calc(100% - 48rpx);
  height: 80rpx;
  padding: 0 24rpx;
}
.deptname_cont .deptname_border {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.deptname_cont .deptname {
  width: calc(100% - 150rpx);
  margin-right: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.deptname_cont .deptname .img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.deptname_cont .deptname image {
  width: 100%;
  height: 100%;
}
.deptname_cont .deptname .name {
  width: calc(100% - 50rpx);
  height: 100%;
  line-height: 80rpx;
}
.address_cont .orderCount {
  width: 130rpx;
  height: 100%;
  line-height: 80rpx;
}
/* 门店名称 end */
/* 订单商品列表 start */
.goodslist {
  width: 100%;
  height: auto;
}
.goods_list1 {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
/* 订单商品列表 end */
.section {
  width: calc(100% - 48rpx);
  padding: 0 24rpx;
}
.order_score {
  margin-bottom: 20rpx;
}
.remark {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.section_tit {
  width: 150rpx;
  margin-right: 20rpx;
}
.section_cont {
  width: calc(100% - 170rpx);
  padding: 24rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.score_group {
  height: 40rpx;
  margin-bottom: unset;
}

/* 结算信息 start */
.pay_desc {
  width: calc(100% - 48rpx);
  height: auto;
  padding: 0 24rpx;
}
.pay_cont {
  width: 100%;
  padding: 20rpx 0;
}
.pay_cont > view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.pay_cont > view:last-child {
  margin-bottom: unset;
}
/* 结算信息 end */
.order_money {
  width: calc(100% - 48rpx);
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 24rpx 310rpx 24rpx;
}
/* buyEnd报错 start */
.errorMessage {
  width: calc(100% - 48rpx);
  height: 100vh;
  padding: 0 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* buyEnd报错 end */
