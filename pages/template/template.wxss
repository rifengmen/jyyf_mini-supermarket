/* 卡信息列表 start */
.card_cont {
  width: 100%;
  height: 322rpx;
  padding: 24rpx 0;
  position: relative;
}
.card_cont .card_bg {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: calc(100vw - 48rpx);
  height: 322rpx;
}
.card_cont .card {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: calc(100vw - 48rpx);
  height: 322rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card_cont .card .card_desc {
  width: calc(100% - 260rpx);
  height: 100%;
  margin-right: 40rpx;
  padding-left: 60rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-flow: column;
}
.card_cont .card .name {
  margin-bottom: 20rpx;
}
.card_cont .card .toRecharge {
  width: 150rpx;
  height: 68rpx;
  padding-right: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-radius: 500rpx 0 0 500rpx;
}
.card_cont .card .toRecharge image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.list_cont {
  width: calc(100% - 80rpx);
  height: auto;
  padding: 0 40rpx;
}
.list_cont .tit {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list_cont .tit .tit_name {
  width: auto;
  height: 32rpx;
  line-height: 32rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #71d793;
}
.list_cont .tit .startdate {
  width: 40rpx;
  height: 40rpx;
}
.list_cont .list_desc {
  width: 100%;
  height: 100%;
}
.list_cont .item {
  width: 100%;
  height: 136rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list_cont .item .name_cont {
  width: calc(100% - 150rpx);
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-flow: column;
}
.list_cont .name_cont .name {
  width: 100%;
  margin-bottom: 10rpx;
}
.list_cont .desc {
  width: 120rpx;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
/* 卡信息列表 end */
