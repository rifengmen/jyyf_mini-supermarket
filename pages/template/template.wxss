/* 卡信息列表 start */
.card_cont {
  width: 100%;
  height: 322rpx;
  padding: 24rpx 0;
  position: relative;
}
.card_cont .card_bg {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: calc(100vw - 48rpx);
  height: 322rpx;
}
.card_cont .card {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: calc(100vw - 48rpx);
  height: 322rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card_cont .card .card_desc {
  width: calc(100% - 260rpx);
  height: 100%;
  margin-right: 40rpx;
  padding-left: 60rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-flow: column;
}
.card_cont .card .name {
  margin-bottom: 20rpx;
}
.card_cont .card .toRecharge {
  width: 150rpx;
  height: 68rpx;
  padding-right: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-radius: 500rpx 0 0 500rpx;
}
.card_cont .card .toRecharge image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.list_cont {
  width: calc(100% - 80rpx);
  height: auto;
  padding: 0 40rpx;
}
.list_cont .tit {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list_cont .tit .tit_name {
  width: auto;
  height: 32rpx;
  line-height: 32rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #71d793;
}
.list_cont .tit .startdate {
  width: 40rpx;
  height: 40rpx;
}
.list_cont .list_desc {
  width: 100%;
  height: 100%;
}
.list_cont .item {
  width: 100%;
  height: 136rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list_cont .item .name_cont {
  width: calc(100% - 150rpx);
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-flow: column;
}
.list_cont .name_cont .name {
  width: 100%;
  margin-bottom: 10rpx;
}
.list_cont .desc {
  width: 120rpx;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
/* 卡信息列表 end */
/* 商品评价 start */
.comment_cont {

}
.comment_cont .comment_list {
  width: 100%;
  height: auto;
}
.comment_cont .comment_item {
  width: 100%;
  height: auto;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.comment_cont .comment_item:last-child {
  border-bottom: unset;
}
.comment_cont .comment_item .user {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.comment_cont .comment_item .user image {
  width: 100%;
  height: 100%;
}
.comment_cont .comment_item .desc {
  width: calc(100% - 80rpx);
  height: auto;
}
.comment_cont .comment_item .desc .name {
  margin-bottom: 4rpx;
}
.comment_cont .comment_item .desc .text {
  width: 100%;
  height: auto;
  white-space: pre-wrap;
  margin-top: 20rpx;
}
.comment_cont .comment_item .desc_img {
  width: 100%;
  height: auto;
  padding: 20rpx 0;
}
.comment_cont .comment_item .desc_img .img {
  width: 100rpx;
  height: 100rpx;
  margin: 0 20rpx 20rpx 0;
  border: 1px solid #f0f0f0
}
.comment_cont .comment_item .img image {
  width: 100%;
  height: 100%;
}
/* 商品评价 end */
/* 首页活动样式一 start */
.hot1_cont {
  width: 100%;
  height: 430rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hot1_cont .hit1_name {
  width: 230rpx;
  height: 100%;
}
.hot1_cont .hit1_name image {
  width: 100%;
  height: 100%;
}
.hot1_cont .goodsList {
  width: 460rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column;
}
.hot1_cont .item1 {
  width: 100%;
  height: 236rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hot1_cont .item1 .item {
  width: 224rpx;
  height: 100%;
}
.hot1_cont .item1 image {
  width: 100%;
  height: 160rpx;
}
.hot1_cont .item1 .goods_name {
  width: calc(100% - 48rpx);
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 24rpx;
}
.hot1_cont .item2 {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hot1_cont .item2 image {
  width: 180rpx;
  height: 100%;
}
.hot1_cont .item2 .goods_cont {
  width: 278rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
}
.hot1_cont .item2 .goods_name {
  line-height: 1.5;
  margin-bottom: 24rpx;
}
.hot1_cont .item2 .goods_btn {
  width: 162rpx;
  height: 40rpx;
  line-height: 40rpx;
}
/* 首页活动样式一 end */
/* 搜索 start */
.search {
  width: 100%;
  height: 70rpx;
}
.search .search_input {
  width: calc(100% - 60rpx);
  height: 100%;
  border: none;
  padding: 0 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.search .search_input image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
/* 搜索 end */
