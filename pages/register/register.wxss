/* pages/register/register.wxss */
.line {
  width: calc(100% - 80rpx);
  height: 90rpx;
  margin: 0 auto 20rpx auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.line_img {
  width: 34rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.line_img image {
  width: 100%;
  height: 100%;
}
.line .input {
  width: calc(100% - 54rpx);
  height: 100%;
}
.input input {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.imgcode .line_img {
  width: 38rpx;
  height: 40rpx;
}
.imgcode .input {
  width: calc(100% - 64rpx);
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.imgcode input {
  width: calc(100% - 200rpx);
}
.imgcode .sendcode {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.imgcode .sendcode image {
  width: 100%;
  height: 100%;
}
.code .line_img {
  width: 43rpx;
  height: 35rpx;
}
.code .input {
  width: calc(100% - 64rpx);
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.code input {
  width: calc(100% - 200rpx);
}
.code .sendcode {
  width: 180rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.btn {
  width: calc(100% - 48rpx);
  height: 70rpx;
  line-height: 70rpx;
  margin: 50rpx auto 0 auto;
}
