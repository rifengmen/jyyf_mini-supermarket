@import "/pages/template/template.wxss";
/* pages/category/category.wxss */
.search_cont {
  position: fixed;
  top: 0;
  left: 0;
  width: calc(100% - 48rpx);
  padding: 10rpx 24rpx;
}
/* 一级分类 start */
.level1 {
  position: fixed;
  top: 90rpx;
  left: 0;
  width: 170rpx;
  height: calc(100vh - 90rpx);
}
.level1 .level1_list {
  width: 100%;
  height: 100%;
}
.level1 .name_cont {
  width: 100%;
  height: 100%;
}
.level1 .level1_item {
  width: 100%;
  padding: 24rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.level1 .level1_name {
  width: calc(100% - 32rpx);
  padding: 0 16rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.level1 .level1_name.active {
  padding-left: 10rpx;
  border-left: 6rpx solid #71d793;
}
/* 一级分类 end */
