.level2 {
  position: fixed;
  top: 88rpx;
  left: 170rpx;
  width: calc(100% - 170rpx);
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.level2 .name_cont {
  width: calc(100% - 80rpx);
}
.level2 .name_cont .name_cont_1 {
  width: 100%;
  height: 70rpx;
  padding-left: 10rpx;
}
.level2 .scroll_name_cont {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}
.level2 .name_cont .name_cont_2 {
  width: 100%;
  height: 0;
  padding-left: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-flow: wrap;
  transition: linear .5s;
}
.level2 .name_cont.active .name_cont_1 {
  height: 0;
}
.level2 .name_cont.active .name_cont_2 {
  height: auto;
}
.level2 .level2_name {
  display: inline-block;
}
.level2 .more {
  width: 22rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 24rpx;
  transition: .5s linear;
}
.level2 .more.active {
  transform: rotate(180deg);
}
.level2 .level2_name {
  padding: 6rpx 20rpx;
  margin: 10rpx;
}
/* 二级分类 end */
.main {
  width: calc(100vw - 218rpx);
  min-height: calc(100vh - 90rpx);
  padding: 0 24rpx;
  margin-left: 170rpx;
}
.main.active {
  min-height: calc(100vh - 90rpx - 70rpx);
}
.goodscont {
  width: 100%;
  min-height: calc(100vh - 90rpx);
  padding-top: 90rpx;
}
.goodscont.active {
  min-height: calc(100vh - 90rpx - 70rpx);
  padding-top: 160rpx;
}
