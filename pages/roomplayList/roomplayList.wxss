/* pages/roomplayList/roomplayList.wxss */
.room_cont {
  width: 100%;
  height: auto;
  padding: 24rpx 0;
}
.room_item {
  width: calc(50% - 36rpx);
  height: auto;
  margin: 0 12rpx 24rpx 24rpx;
}
.room_item:nth-child(2n) {
  margin: 0 24rpx 24rpx 12rpx;
}
.img {
  width: calc(100% - 24rpx);
  height: 440rpx;
  padding: 12rpx;
}
.img image {
  width: 100%;
  height: 100%;
}
.name {
  width: calc(100% - 24rpx);
  min-height: 60rpx;
  line-height: 1.5;
  margin-top: 10rpx;
  padding: 0 12rpx;
}
