/* pages/author/author.wxss */
.author_cont {
  width: calc(100% -160rpx);
  height: 100vh;
  padding: 0 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-flow: column;
}
.logo {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column;
}
.logo_img {
  width: 200rpx;
  height: 200rpx;
}
.logo_img image {
  width: 100%;
  height: 100%;
}
.button {
  width: 100%;
  height: 220rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column;
}
button {
  width: 100%;
}