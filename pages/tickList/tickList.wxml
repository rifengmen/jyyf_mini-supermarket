<!--pages/tickList/tickList.wxml-->
<view class="container color333333 font28 bgf0f0f0" data-weui-theme="dark" xmlns:wx="http://www.w3.org/1999/XSL/Transform">
	<view class="tick_list">
		<view class="item border_r10 overflow" hover-class="none" wx:for="{{tickList}}" wx:key="index" catchtap="toTickDetail" data-tickid="{{item.tickid}}">
			<image class="bgimg" src="/lib/images/tickBg.png"></image>
			<view class="tit colorffffff">
				<view class="name">
					<view class="face_value font60" wx:if="{{item.tickettype === 1}}"><text class="font40 font_blod">￥</text>{{item.usemoney}}</view>
					<view class="face_value font60" wx:if="{{item.tickettype === 2}}">{{item.usemoney * 10}}<text class="font30 font_blod">折</text></view>
					<view class="type font24">
						<view class="ellipsis">{{item.tickettypename}}</view>
						<view class="ellipsis">满{{item.minsalemoney}}元使用</view>
					</view>
				</view>
				<view class="btn_cont">
					<view class="btn colorffffff border_r500 border_affffff" wx:if="{{from === 'userInfo'}}" data-enddate="{{item.enddate}}">{{item.days}}天后过期</view>
					<view class="btn colorffffff border_r500 border_a38b060 bg38b060" wx:elif="{{from === 'auto'}}">
            <getTickBtn tickid="{{item.tickid}}"></getTickBtn>
          </view>
					<view class="btn colorffffff border_r500 border_a38b060 bg38b060" wx:elif="{{from=== 'editorOrder'}}">
            <useTickBtn tick="{{item}}" Totalmoney="{{Totalmoney}}"></useTickBtn>
          </view>
				</view>
			</view>
			<view class="desc bgffffff">
				<view class="desc_tit">使用规则</view>
				<view class="color666666 font24 ellipsis">{{item.dealflagdescription}}，{{item.limitdeptcode}}，{{item.tickname}}</view>
				<view class="rule color666666 font24 ellipsis">每月禁用日（{{item.notuseday || '无'}}）</view>
				<view class="color999999 font24 ellipsis">使用日期：{{item.startdate}} —— {{item.enddate}}</view>
			</view>
		</view>
	</view>
</view>