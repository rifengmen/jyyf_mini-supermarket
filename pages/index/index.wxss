/**index.wxss**/
/* 广告位 start */
/*  */
.banner_cont {
  width: calc(100% - 48rpx);
  height: 340rpx;
  padding: 0 24rpx;
  position: relative;
}
.banner_cont .bg_img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.banner_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.banner_cont_box {
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100% - 48rpx);
  height: 100%;
  padding: 0 24rpx;
}
/* 定位 start */
.gps {
  width: 60%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.gps_img {
  width: 30rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.gps_img image {
  width: 100%;
  height: 100%;
}
.gps text {
  width: calc(100% - 50rpx);
}
/* 定位 end */
/* 搜索 start */
.search_cont {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.search_cont .search {
  width: 35%;
}
.search_input form {
  width: 60%;
} 
/* 搜索 end */
/* banner start */
swiper.banner_swiper {
  width: 100%;
  height: 248rpx;
}
.swiper_item {
  width: 100%;
  height: 100%;
}
/* banner end */
/* 广告位 end */
/* 分类 start */
.index_cate {
  width: calc(100% - 48rpx);
  height: auto;
  margin: 10rpx auto 20rpx auto;
}
.cate_list {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  white-space: nowrap;
}
.cate_item:nth-child(5n) {
  margin-right: unset;
}
/* 分类 end */
/* 公告 start */
.notice_cont {
  width: calc(100% - 88rpx);
  height: 70rpx;
  margin: 0 auto;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.notice_img {
  width: 92rpx;
  height: 34rpx;
}
.notice_img image {
  width: 100%;
  height: 100%;
}
.notice_list {
  width: 560rpx;
  height: 100%;
}
swiper.notice_swiper {
  width: 100%;
  height: 100%;
}
.notice_item {
  width: 100%;
  height: 100%;
  line-height: 70rpx;
}
/* 公告 end */
/* 专区 start */
.zone {
  width: calc(100% - 48rpx);
  /* height: 134rpx; */
  margin: 0 auto;
  padding-top: 24rpx;
}
.zone_item {
  width: 339rpx;
  height: 134rpx;
  box-shadow:0px 0px 4px 3px rgba(243,239,239,0.5);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 24rpx 24rpx 0;
}
.zone_item:nth-child(2n) {
  margin-right: unset;
}
.zone_itemtit {
  width: 136rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
  margin: 0 24rpx;
}
.zone_itemname {
  width: 100%;
  margin-bottom: 15rpx;
}
.tozone {
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
}
.zone_itemimg {
  width: 112rpx;
  height: 112rpx;
}
.zone_itemimg image {
  width: 100%;
  height: 100%;
}
/* 专区 end */
/* 限时抢购 start */
.timeslimit {
  width: calc(100% - 48rpx);
  height: 390rpx;
  margin: 0 auto;

}
.timeslimit .tit {
  width: calc(100% - 48rpx);
  height: 32rpx;
  padding: 24rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.timeslimit .tit_img {
  width: 32rpx;
  height: 100%;
  margin-right: 20rpx;
}
.timeslimit .tit_img image {
  width: 100%;
  height: 100%;
}
.timeslimit .list {
  width: calc(100% - 28rpx);
  height: 272rpx;
  margin: 0 auto;
}
swiper.timeslimit_swiper {
  width: 100%;
  height: 100%;
}
.timeslimit .item {
  width: 216rpx;
  height: auto;
  margin: 0 auto;
}
.timeslimit .item_img {
  width: 100%;
  height: 162rpx;
}
.timeslimit .item_img image {
  width: 100%;
  height: 100%;
}
.timeslimit .item_name {
  width: calc(100% - 20rpx);
  height: 30rpx;
  line-height: 30rpx;
  margin: 15rpx auto;
}
.timeslimit .price_cont {
  width: calc(100% - 20rpx);
  height: 40rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.timeslimit .price {
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.timeslimit .cart {
  width: 40rpx;
  height: 40rpx;
}
.timeslimit .cart image {
  width: 100%;
  height: 100%;
}
/* 限时抢购 end */