<view class="container color333333 font28 bgf9f9f9" data-weui-theme="dark" xmlns:wx="http://www.w3.org/1999/XSL/Transform">
	<!-- 广告位 start -->
	<view class="banner_cont overflow" wx:if="{{bannerList}}">
		<view class="banner_bg bg71d793_linear"></view>
		<view class="banner_cont_box">
			<!-- 定位 搜索 start -->
			<view class="search_cont">
				<!-- 定位 start -->
				<navigator class="gps" hover-class="none" url="/pages/shopList/shopList">
					<view class="gps_img overflow">
						<image src="/lib/images/gps.png"></image>
					</view>
					<text class="font32 colorffffff ellipsis">{{deptname}}</text>
				</navigator>
				<!-- 定位 end -->
				<!-- 搜索 start -->
				<navigator class="search bgf9f9f9 border_r500" hover-class="none" url="/pages/search/search">
					<view class="search_input fl">
						<image src="/lib/images/search.png" class="fr"></image>
						<form action="javascript:return true;">
							<input type="text" confirm-type='search' placeholder="搜商品" class="fl font24" value="{{search_val}}" />
						</form>
					</view>
				</navigator>
				<!-- 搜索 end -->
			</view>
			<!-- 定位 搜索 end -->
			<!-- banner start -->
			<view class="banner border_r10 overflow bgffffff">
				<swiper class="banner_swiper" indicator-color="#ffffff" indicator-active-color="#71d793" autoplay="true" circular="true" interval="4000" duration="500" current="{{swiperCurrent}}" bindchange="swiperChange">
					<swiper-item wx:for="{{bannerList}}" wx:key="index">
						<image src="{{baseUrl + item.Imageurl}}" class="swiper_item" lazy-load="true" bindtap="toBannerDetail" data-id="{{item.ImageID}}" mode="aspectFit"></image>
					</swiper-item>
				</swiper>
				<view class="dots">
					<block wx:for="{{bannerList}}" wx:key="index">
						<view class="dot {{index === swiperCurrent ? 'active bg71d793' : 'bgffffff'}} border_r500"></view>
					</block>
				</view>
			</view>
			<!-- banner end -->
		</view>
	</view>
	<!-- 广告位 end -->
	<!-- 自定义功能区 start -->
	<view class="auto_cate overflow">
		<scroll-view class="cate_list" scroll-x enable-flex="true" bindscroll="conScroll" bindscrolltolower="conScrLower" upper-threshold="50rpx" bindscrolltoupper="conScrUpper" scroll-with-animation>
			<view class="auto_down">
				<view class="cate_item down" wx:for="{{modulePictureList}}" wx:key="index" wx:if="{{index%2 === 0}}" data-moduletype="{{item.moduletype}}" bindtap="toAutoCate">
					<view class="cate_img border_r500 overflow">
						<image src="{{baseUrl + item.picturename}}"></image>
					</view>
					<view class="cate_name tc">{{item.modulename}}</view>
				</view>
			</view>
			<view class="auto_up">
				<view class="cate_item up" wx:for="{{modulePictureList}}" wx:key="index" wx:if="{{index%2 === 1}}" data-moduletype="{{item.moduletype}}" bindtap="toAutoCate">
					<view class="cate_img border_r500 overflow">
						<image src="{{baseUrl + item.picturename}}"></image>
					</view>
					<text class="cate_name ellipsis">{{item.modulename}}</text>
				</view>
			</view>
		</scroll-view>
		<!-- 自定义滚动条 start -->
		<block wx:if="{{modulePictureList.length > 10}}">
			<view class="con-sc-line-one {{lefOrRigOne ? 'con-sc-line-one-left' : 'con-sc-line-one-right'}} border_r500 bg71d793" animation="{{animationData}}"></view>
			<view class='con-sc-line-two border_r500 bge2dede' style='left: {{leftTwo}}'></view>
		</block>
		<!-- 自定义滚动条 end -->
	</view>
	<!-- 自定义功能区 end -->
	<!-- 公告 start -->
	<view class="notice_cont border_r500 overflow bgffffff">
		<navigator class="notice_img overflow" hover-class="none" url="/pages/message/noticeList/noticeList">
			<image src="/lib/images/notice.png"></image>
		</navigator>
		<view class="notice_list">
			<swiper class="notice_swiper" autoplay="true" circular="true" interval="5000" vertical="true">
				<swiper-item wx:for="{{noticeList}}" wx:key="index" catchtouchmove='catchTouchMove'>
					<navigator class="notice_item ellipsis" hover-class="none" url="{{'/pages/message/detail/detail?id=' + item.id + '&type=notice&time=' + item.Pubdate}}">{{item.title}}</navigator>
				</swiper-item>
			</swiper>
		</view>
	</view>
	<!-- 公告 end -->
	<!-- 海报区 start -->
	<view class="poster overflow">
		<view class="poster_img fl overflow" wx:for="{{posterList}}" wx:key="index" bindtap="toBannerDetail" data-id="{{item.ImageID}}">
			<image src="{{baseUrl + item.Imageurl}}" mode="aspectFit"></image>
		</view>
	</view>
	<!-- 海报区 end -->
	<!-- 专区 start -->
	<view class="zone overflow">
		<navigator url="{{'/pages/goodsList/goodsList?cateid=' + item.Id + '&title=' + item.storecategoryname}}" class="zone_item border_r10 bgfbd2af fl" wx:for="{{hotList}}" wx:key="index">
