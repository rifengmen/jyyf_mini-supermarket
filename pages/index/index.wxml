	<!-- recommendList start -->
	<view class="recommendList">
		<view class="tit font36 font_blod">每日推荐</view>
		<view class="recommend border_r10 overflow bgffffff" wx:for="{{recommendList}}" wx:key="index" data-index='{{index}}'>
			<!-- 标题 start -->
			<navigator class="recommend_tit" hover-class="none" url="{{'/pages/goodsList/goodsList?cateid=' + item.Id + '&title=' + item.storecategoryname}}">
				<view class="tit_img overflow" wx:if="{{item.showway === 1}}">
					<image src="{{baseUrl + item.ico}}" mode="aspectFit"></image>
				</view>
				<view class='tit_text font32 font_blod' wx:if="{{item.showway === 2}}">{{item.storecategoryname}}</view>
			</navigator>
			<!-- 标题 end -->
			<!-- 商品列表 start -->
			<view class='goods_list1'>
				<navigator class="goods_item1 border_r10 overflow" hover-class="none" wx:for-item="goods" wx:for-index="gindex" wx:for="{{item.gdscodelist}}" wx:key="gindex" url="{{'/pages/goodsDetail/goodsDetail?Gdscode=' + goods.Gdscode + '&title=' + goods.Name}}">
					<view class="item_img overflow">
						<image src="{{baseUrl + goods.Defaultimage}}" mode="aspectFit" lazy-load="true"></image>
					</view>
					<view class="item_name ellipsis">{{goods.Name}}</view>
					<view class="price_cont">
						<view class="price" wx:if="{{goods.scaleflag}}">
							<view class="actual_price colorfa6400 font26">￥{{goods.Highpprice/2}}/斤</view>
							<del class="color999999 font20" wx:if="{{goods.Highoprice !== goods.Highpprice}}">￥{{goods.Highoprice/2}}/斤</del>
						</view>
						<view class="price" wx:else>
							<view class="actual_price colorfa6400 font26">￥{{goods.Highpprice}}</view>
							<del class="color999999 font20" wx:if="{{goods.Highoprice !== goods.Highpprice}}">￥{{goods.Highoprice}}</del>
						</view>
						<view class="cart">
							<addCart id="addCart" catchtap="addCart" data-goods="{{goods}}" bind:getCartCount="getCartCount"></addCart>
						</view>
					</view>
				</navigator>
			</view>
			<!-- 商品列表 end -->
		</view>
	</view>
	<!-- recommendList end -->
	<!-- dialog start -->
	<view class="dialog_cont color999999 font28 z_index_99999" wx:if="{{dialogFlag}}">
		<view class="dialog border_r20 bgffffff ellipsis">
			<view class="dialog_title font32 font_blod color333333">{{dialogTitle}}</view>
			<view class="dialog_section">
				<view class="dialog_section_tit">单价：</view>
				<view class="dialog_section_cont color333333">{{dialogPrice/2}}元/斤</view>
			</view>
			<view class="dialog_section">
				<view class="dialog_section_tit">斤数(500g)：</view>
				<view class="dialog_section_cont color333333">
					<input class="dialog_input bg999999 border_r500" type="number" placeholder="请输入斤数" value="{{dialogJin}}" bindinput="setDialogJin"></input>
				</view>
			</view>
			<view class="dialog_section">
				<view class="dialog_section_tit">两数(50g)：</view>
				<view class="dialog_section_cont color333333">
					<input class="dialog_input bg999999 border_r500" type="number" placeholder="请输入两数" value="{{dialogLiang}}" bindinput="setDialogLiang"></input>
				</view>
			</view>
			<view class="dialog_section">
				<view class="dialog_section_tit">重量相当于：</view>
				<view class="dialog_section_cont color333333">{{dialogCount}}kg</view>
			</view>
			<view class="dialog_section">
				<view class="dialog_section_tit">大致金额：</view>
				<view class="dialog_section_cont color333333">
					<text class="colorf6400">{{dialogTotalMoney}}</text>
					<text>元</text>
				</view>
			</view>
			<view class="dialog_btn">
				<view class="dialog_cancel border_r500 bgffffff tc" bindtap="dialogClose">取消</view>
				<view class="dialog_confirm colorffffff border_r500 bg71d793 tc" bindtap="dialogConfirm">确认</view>
			</view>
		</view>
	</view>
	<!-- dialog end -->
</view>
