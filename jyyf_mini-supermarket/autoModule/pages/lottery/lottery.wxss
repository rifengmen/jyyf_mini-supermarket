/* autoModule/pages/lottery/lottery.wxss */
.lottery_bg {
  width: 100%;
  height: 100vh;
  position: relative;
}
.lotteryBgUrl {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 100%;
}
.btn_cont {
  position: absolute;
  top: 220rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn_cont .btn {
  width: auto;
  height: 100%;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn_cont .btn:first-child {
  border-radius: 0 500rpx 500rpx 0;
}
.btn_cont .btn:last-child {
  border-radius: 500rpx 0 0 500rpx;
}
/* 抽奖转盘样式 start */
.lottery_cont {
  position: absolute;
  top: 385rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 490rpx;
  height: 490rpx;
}
.lotteryTurnUrl {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.lottery_turn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.lottery_turn .turn_text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.lottery_turn .text_item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-flow: column;
}
.lottery_turn .text_item .name {
  width: calc(100% - 320rpx);
  height: calc(100% - 80rpx);
  padding: 40rpx 160rpx;
}
.turnbg .text_item .name {
  width: 100%;
  height: auto;
  padding: 20rpx;
}
.turnbg .text_item image {
  width: 90rpx;
  height: 90rpx;
}
.lottery_turn .text_decollator {
  position: absolute;
  top: 0rpx;
  left: 245rpx;
  width: 0;
  height: 245rpx;
}
.lotteryStart {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 130rpx;
  height: 130rpx;
}
/* 抽奖转盘样式 end */
