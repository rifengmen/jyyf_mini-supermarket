/* userInfo/pages/myCode/myCode.wxss */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
}
.code_cont {
  width: 668rpx;
  height: 900rpx;
  box-shadow: 0px 0px 14px 4px #5dbe7e;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
}
.bar_code {
  width: 500rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}
.bar_code image {
  width: 100%;
  height: 100%;
}
.qr_code {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 50rpx;
}
.qr_code image {
  width: 100%;
  height: 100%;
}
.btn {
  width: 380rpx;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card_code {
  width: 210rpx;
  height: 100%;
  line-height: 70rpx;
}
.pay_code {
  width: 170rpx;
  height: 100%;
  line-height: 70rpx;
}

