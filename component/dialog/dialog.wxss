/* dialog start */
.dialog_cont {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 0;
  transition: linear .3s;
}
.dialog_cont.dialog_show {
  height: 100vh;
}
.dialog_cont.dialog_hide {
  height: 0;
}
.dialog_cont .dialog {
  position: absolute;
  bottom: 0;
  left: 0;
  width: calc(100% - 48rpx);
  height: auto;
  padding: 10rpx 24rpx 40rpx 24rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.dialog_cont .dialog_title {
  width: 100%;
  height: 36rpx;
  line-height: 40rpx;
  margin-bottom: 30rpx;
}
.dialog_cont .dialog_goods {
  width: 100%;
  height: 210rpx;
  margin-bottom: 20rpx;
}
.dialog_cont .dialog_section {
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.dialog_cont .dialog_section_tit {
  margin-right: 20rpx;
}
.dialog_cont .dialog_section_cont {
  width: 360rpx;
  height: 100%;
}
.dialog_cont .dialog_input {
  width: calc(100% - 50rpx);
  height: 46rpx;
  padding: 0 24rpx;
}
.dialog_cont .dialog_btn {
  width: calc(100% - 80rpx);
  height: 50rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dialog_cont .dialog_cancel {
  width: 173rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.dialog_cont .dialog_confirm {
  width: 173rpx;
  height: 48rpx;
  line-height: 48rpx;
}
/* dialog end */
