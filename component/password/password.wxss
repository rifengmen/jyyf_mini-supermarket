/* component/password/password.wxss */
/* 密码弹框 start */
.password_cont {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .7);
  display: flex;
  justify-content: center;
  align-items: center;
}
.password_cont .password {
  width: 540rpx;
  height: 290rpx;
  padding: 40rpx;
}
.password_cont .tit {
  padding: 10rpx 0;
}
.password_cont .password_input {
  width: 100%;
  height: 72rpx;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.password_cont .password_input input {
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 0;
  height: 0rpx;
}
.password_cont .password_input .pd {
  width: 72rpx;
  height: 100%;
  line-height: 112rpx;
  display: flex;
  justify-content: center;
}
.password_cont .password_btn {
  width: 100%;
  height: 50rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.password_cont .password_btn .btn {
  width: 170rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 密码弹框 end */
