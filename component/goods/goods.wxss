/* component/goods/goods.wxss */
/* showType1 start */
.goods_item1 .item_img {
    width: 300rpx;
    height: 300rpx;
}
.goods_item1 .item_desc {
    width: calc(100% - 348rpx);
    min-height: 252rpx;
    padding: 24rpx;
}
/* showType1 end */
/* showType2 start */
.goods_item2 {
    width: 100%;
    height: auto;
    margin: 0 0 12rpx 0;
    flex-flow: column;
    box-shadow: 0 0 4px 3px rgba(243, 239, 239, 0.5);
}
.goods_item2:last-child {
    margin-bottom: unset;
}
.goods_item2 .item_img {
    width: 100%;
    height: 344rpx;
    margin: unset;
}
.goods_item2 .item_desc {
    width: calc(100% - 40rpx);
    padding: 20rpx;
}
.goods_item2 .item_name {
    line-height: 1.5;
}
/* showType2 end */
/* showType3 start */
.goods_item3 {
    width: 236rpx;
    margin: 0 16rpx 0 0;
    flex-flow: column;
}
.goods_item3 .item_img {
    width: 100%;
    height: 236rpx;
    margin: unset;
}
.goods_item3 .item_desc {
    width: calc(100% - 20rpx);
    height: 156rpx;
    min-height: unset;
    line-height: 1.5;
    margin: 16rpx auto;
    padding: unset;
}
.goods_item3 .item_name {
    max-height: unset;
    height: 72rpx;
}
/* showType3 end */

