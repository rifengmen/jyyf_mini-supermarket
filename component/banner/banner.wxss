/* component/banner/banner.wxss */
.banner {
    width: 100%;
    height: 100%;
    position: relative;
}
/* banner start */
.banner .banner_swiper {
    width: 100%;
    height: 100%;
}
.banner .banner_swiper .banner_item {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 48rpx);
    height: 100%;
}
.banner .banner_swiper .banner_item_goods {
    width: 100%;
}
/* banner end */
/* 自定义功能块 start */
.banner .banner_swiper .auto {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 48rpx);
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-flow: wrap;
}
.banner .auto .auto_item {
    width: 20%;
    height: 180rpx;
    padding-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-flow: column;
}
.auto_item .auto_img {
    width: 122rpx;
    height: 122rpx;
}
.auto_item .auto_img .img {
    width: 100%;
    height: 100%;
}
.auto_item .auto_name {
    width: 100%;
    height: calc(100% - 122rpx);
    display: flex;
    justify-content: center;
    align-items: center;
}
/* 自定义功能块 end */
/* banner图轮播点儿样式 start */
.banner .dots {
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    align-content: center;
}
.banner .dots .dot {
    margin: 0 8rpx;
    width: 10rpx;
    height: 10rpx;
    transition: all .5s;
}
.banner .dots .dot.active{
    width: 24rpx;
}
/* banner图轮播点儿样式 end */
