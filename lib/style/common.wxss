/* 购物车 start */
/* 购物车图片 start */
.goods_item .cart {
  width: auto;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.goods_item .cart .cart_img {
  width: 50rpx;
  height: 50rpx;
}
.goods_item .cart .img {
  width: 100%;
  height: 100%;
}
/* 购物车图片 end */
/* 编辑数量 start */
.editor_cart {
  width: 174rpx;
  height: 40rpx;
  padding: 4rpx 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.editor_cart .btn {
  width: 40rpx;
  height: 40rpx;
}
.editor_cart .btn .img {
  width: 100%;
  height: 100%;
}
.editor_cart .input_cart {
  width: 80rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 编辑数量 end */
/* 购物车 end */
/* 商品列表 end */
/* 无数据样式 start */
.nodata_cont {
  width: 100%;
  padding: 150rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
}
.nodata {
  width: 300rpx;
  height: 200rpx;
  margin-bottom: 50rpx;
}
.nodata image {
  width: 100%;
  height: 100%;
}
/* 无数据样式 end */
/* btn按钮样式 start */
.btn_cont {
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 80rpx);
  height: auto;
  padding: 60rpx 40rpx;
}
.btn_cont .btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 40rpx;
}
.btn_cont .btn:first-child {
  margin-top: unset;
}
/* btn按钮样式 end */
/* 日历定位 start */
.setdate {
  position: fixed;
  bottom: 80rpx;
  left: 40rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, .1);
}
.setdate .startdate {
  width: 100%;
  height: 100%;
}
/* 日历定位 end */
/* 提示角标 start */
.badge {
  position: absolute;
  top: 0;
  right: 0;
  height: 34rpx;
  padding: 0 12rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
/* 提示角标 end */
/* 标签 start */
.tag_cont {
  width: 100%;
  height: auto;
  padding: 20rpx 0;
}
.tag {
  margin: 0 20rpx;
  padding: 4rpx 20rpx;
}
.tag:first-child {
  margin-left: unset;
}
.tag:last-child {
  margin-right: unset;
}
/* 标签 end */
/* 密码弹框 start */
.password_cont {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .7);
}
.password_cont .password {
  width: 540rpx;
  height: 290rpx;
  margin: 350rpx auto 0 auto;
  padding: 40rpx;
}
.password_cont .tit {
  padding: 10rpx 0;
}
.password_cont .password_input {
  width: 100%;
  height: 72rpx;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.password_cont .password_input .input {
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 0;
  height: 0rpx;
}
.password_cont .password_input .pd {
  width: 72rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.password_cont .password_btn {
  width: 100%;
  height: 50rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.password_cont .password_btn .btn {
  width: 170rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 密码弹框 end */

