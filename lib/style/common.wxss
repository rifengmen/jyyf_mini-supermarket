/* logo样式 start */
.logo {
  width: calc(100% - 160rpx);
  height: 300rpx;
  padding: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column;
}
.logo_img {
  width: 100%;
  height: 200rpx;
}
.logo_img image {
  width: 100%;
  height: 100%;
}
/* logo样式 end */
/* 商品列表 start */
.goods_cont {
  width: calc(100% - 88rpx);
  max-height: calc(100vh - 170rpx - 48rpx - 40rpx);
  margin: 0 auto;
  padding: 20rpx;
  overflow-y: scroll;
}
.goods_item_more {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 120rpx!important;
}
.goods_item_more .more {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 商品列表_1 start */
.goods_list1 {
  width: 100%;
  height: 100%;
}
.goods_item {
  width: 100%;
  height: auto;
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.goods_item .item_img {
  width: 170rpx;
  height: 170rpx;
  margin-right: 20rpx;
  position: relative;
}
.goods_item .item_img .img {
  width: 100%;
  height: 100%;
}
.goods_item .item_img .none {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_item .item_desc {
  width: calc(100% - 190rpx);
  min-height: 170rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column;
}
.goods_item .item_name {
  width: 100%;
  max-height: 90rpx;
}
.goods_item .panicBuy {
  width: 100%;
}
.goods_item .price_cont {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_item .price {
  width: 70%;
  height: 100%;
}
.goods_item .price .actual_price {
  margin-right: 20rpx;
}
.goods_item .price .del {
  height: auto;
  display: flex;
  align-items: center;
}
/* 商品列表_1 end */
/* 商品列表_1plus start */
.goods_list1plus {
  width: 100%;
  height: 100%;
}
/* 商品列表_1plus end */
/* 商品列表_2 start */
.goods_list2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.goods_list2 .goods_list2_cont {
  width: 344rpx;
}
/* 商品列表_2 end */
/* 商品列表_3 start */
.goods_list3 {
  width: calc(100% - 32rpx);
  height: 424rpx;
  padding: 0 16rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
/* 商品列表_3 end */
