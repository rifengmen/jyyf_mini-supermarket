.card_cont {
  width: calc(100% - 48rpx);
  height: 322rpx;
  padding: 24rpx;
}
.card {
  width: 100%;
  height: 100%;
  position: relative;
}
.card_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.no {
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100% - 100rpx);
  height: 100rpx;
  line-height: 100rpx;
  padding: 30rpx 50rpx 10rpx 50rpx;
}
.type {
  position: absolute;
  top: 140rpx;
  left: 0;
  width: calc(100% - 100rpx);
  height: 40rpx;
  line-height: 40rpx;
  padding: 10rpx 50rpx;
}
.btn_cont {
  position: absolute;
  top: 230rpx;
  left: 0;
  width: calc(100% - 100rpx);
  height: 60rpx;
  padding: 0 50rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.btn {
  width: 210rpx;
  height: 100%;
  line-height: 60rpx;
}
.close_btn {
  margin-left: 30rpx;
}
