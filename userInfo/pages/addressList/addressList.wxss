/* userInfo/pages/addressList/addressList.wxss */
.address_cont {
  width: 100%;
  height: auto;
  padding-top: 24rpx;
}
.address {
  width: calc(100% - 48rpx);
  height: auto;
  margin: 0 auto;
}
.address_tit {
  width: calc(100% - 60rpx);
  height: 78rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address_list {
  width: 100%;
  height: auto;
  max-height: calc(100vh - 148rpx);
  overflow-y: scroll;
}
/* 地址列表 start */
.address_item {
  width: calc(100% - 60rpx);
  height: auto;
  margin: 0 auto;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.address_item:last-child {
  border-bottom: unset;
}
.address_item .item_desc {
  width: calc(100% - 110rpx);
  height: 100%;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-flow: column;
}
.address_item .name {
  line-height: 1.5;
  margin-bottom: 10rpx;
}
.address_item .item_editor {
  width: 90rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column;
}
.address_item .item_editor .editor {
  width: 40rpx;
  height: 40rpx;
}
.address_item .item_editor .editor image {
  width: 100%;
  height: 100%;
}
.address_item .item_editor .isdefault {
  width: 100%;
  margin-top: 30rpx;
  scale: .7;
}
.address_item .no_send {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 140rpx;
  height: 130rpx;
}
/* 地址列表 end */
.nodata_cont {
  width: 100%;
  height: calc(100vh - 148rpx);
}
